<% if session[:user_id] %>

    <h1>Create New Post</h1>

    <form action="/posts" method="post">
        <div class="form-group">
            <input type="text" class="form-control form-control-lg" name="title" id="title" placeholder="Title">
        </div>
        <div class="form-group">
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Content"></textarea>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="tags" id="tags" placeholder="#tags">
        </div>
        
        <button type="submit" class="btn btn-default">Submit</button>
    </form>

<% else %>
    <% redirect '/' %>
<% end %>

