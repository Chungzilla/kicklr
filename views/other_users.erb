
<div id="post-wrapper">

<h1>

    <%= @other_user.username %>
</h1>

    <% @other_user_posts.each do |post| %>
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> <%= post.title %> </h4>
                <p class="card-text"><small class="text-muted"> <%= post.created_at.strftime("%B %d, %Y - %H:%M:%S") %> </small></p>
                <p class="card-text"> <%= post.content %> </p>
            </div>
            
        </div>
    <% end %>

</div>